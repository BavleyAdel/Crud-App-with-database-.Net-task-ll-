@model IEnumerable<Blog>
@{
	Layout = "_DashBoard";
}

<div>
    <table class="table table-striped">
        <thead>
            <tr>
                <td class="table-light">id</td>
                <td class="table-light">Title</td>
                <td class="table-light">Description</td>
                <td class="table-light">Date</td>
                <td class="table-light">Category</td>
                <td class="table-light">operation</td>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Title</td>
                    <td>@item.Description</td>
                    <td>@item.Date</td>
                    <td>@item.category.Name</td>
                    <td>


                        <a class="btn btn-success" role="button" asp-action="EditBlog" asp-route-id="@item.Id">
                            <span class="material-symbols-outlined">
                                Edit
                            </span>
                        </a>
                        <a class="btn btn-danger " role="button" asp-action="DeleteBlog" asp-route-id ="@item.Id">
                            <span class="material-symbols-outlined">
                                delete
                            </span>
                        </a>
                    </td>

                </tr>
                
            }
        </tbody>
    </table>

</div>

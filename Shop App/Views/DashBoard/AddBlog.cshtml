@model Blog
@{
	Layout = "_DashBoard";
}

<div class="overview">
    <div class="title">
        <i class="uil uil-tachometer-fast-alt"></i>
        <span class="text">Adding Product</span>
    </div>

    <div>
        <form method="post" asp-action="AddBlog" class="row">
            <div class="mb-3">
                <label for="" class="form-label" asp-for="Title">Blog Title</label>
                <input type="text"
                       class="form-control"
                       placeholder="" asp-for="Title"/>
                <span class="text-danger" asp-validation-for="Title"></span>


            </div>
            <div class="mb-3">
                <label for="" class="form-label" asp-for="Description">Blog Description</label>
                <textarea type="text"
                          class="form-control"
                          placeholder="" asp-for="Description"></textarea>
                <span class="text-danger" asp-validation-for="Description"></span>

            </div>

            <div class="mb-3 col-lg-6">
                <label for="" class="form-label" asp-for="Date">Blog Date</label>
                <input type="date"
                       class="form-control"
                       placeholder="" asp-for="Date"></input>
                <span class="text-danger" asp-validation-for="Date"></span>

            </div>

@* 
            <div class="mb-3 col-lg-12 d-flex align-items-center mt-4">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="" />
                    <label class="form-check-label" for=""> Enable Product Size </label>
                </div> 


            </div>*@

            <div class="mb-3 col-lg-6">
                <label class="form-label" asp-for="CategoryId">Category</label>
                <select class="form-select"
                        asp-for="CategoryId">
                    <span class="text-danger" asp-validation-for="CategoryId"></span>

                    <option selected>Select one</option>
                    <option value="1">Sports</option>
                    <option value="2">Life Style</option>
                </select>
            </div>

            <div class="col-lg-12 d-flex justify-content-center  ">

                <button type="submit" class="btn btn-primary">Submit</button>

            </div>
        </form>

    </div>
</div>
